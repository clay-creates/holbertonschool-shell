#!/usr/bin/env bash
#While loop displaying 59 mins, followed by 12 hours

hour=0
hour_target=12

min=1
min_target=60

echo "Hour:" $hour
((hour=hour+1))

while [ $min -lt $min_target ];
do
    echo $min
    ((i++))
if [[ $min -eq $min_target || $hour -le $hour_target ]];
then
    ((min=$min+1))
    echo "Hour:" $hour
    echo $hour
    ((i++))
fi
done
